{
    "name": "AtCoder Projects",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "formulahendry.code-runner",
                "wmaurer.change-case"
            ],
            "settings": {
                // コンパイル時の設定
                "code-runner.executorMap": {
                    "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt -std=c++20 -Wall -Wextra -O2 -D_GLIBCXX_DEBUG -I/opt/ac-library && $dir$fileNameWithoutExt"
                },
                "code-runner.runInTerminal": true,
                "code-runner.saveFileBeforeRun": true,
                // VS Codeのインテリセンス設定
                "C_Cpp.default.cppStandard": "c++20",
                "C_Cpp.default.includePath": [
                    "${default}",
                    "/opt/ac-library"
                ]
            }
        }
    }
}